<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.badeeb.greenbook.fragments.ShopSearchFragment"
    android:id="@+id/shop_search_fragment">

    <LinearLayout
        android:id="@+id/topBarlayout"
        android:layout_height="85dp"
        android:layout_width="match_parent"
        android:background="@color/green"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="7.3dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corner_light_green">

            <ImageView
                android:id="@+id/ivSearch"
                android:layout_width="27dp"
                android:layout_height="19.3dp"
                android:src="@drawable/ic_search_pressed"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="5dp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="23dp"
                android:layout_marginTop="9.7dp"
                android:layout_marginLeft="35dp"
                android:background="@color/gray"
                />

            <TextView
                android:id="@+id/tvCategorySearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:background="@android:color/transparent"
                android:hint="Choose category "
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:gravity="center_vertical"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/monsoon"
                android:textSize="16sp"
                android:ems="10">

                <requestFocus />
            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginLeft="7.3dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/rounded_corner_light_green">

            <ImageView
                android:id="@+id/ivLocation"
                android:layout_width="18dp"
                android:layout_height="22dp"
                android:src="@drawable/ic_location"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="23dp"
                android:layout_marginTop="9.7dp"
                android:layout_marginLeft="35dp"
                android:background="@color/gray"
                />

            <AutoCompleteTextView
                android:id="@+id/actvLocationSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="7.5dp"
                android:paddingTop="8.5dp"
                android:layout_marginLeft="35.4dp"
                android:background="@android:color/transparent"
                android:layout_alignLeft="@id/ivLocation"
                android:hint="Current Location"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/monsoon"
                android:textSize="16sp"
                android:singleLine="true"
                android:dropDownAnchor="@+id/topBarlayout"
                android:dropDownWidth="fill_parent"
                android:dropDownHeight="wrap_content"
                android:layout_toLeftOf="@+id/ivMap"
                android:layout_toRightOf="@+id/ivLocation"
                />



        </RelativeLayout>

        <ListView
            android:id="@+id/lvCategoryList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></ListView>
    </LinearLayout>

</LinearLayout>



