<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shop_search_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.badeeb.greenbook.fragments.PlaceFilterFragment">

    <LinearLayout
        android:id="@+id/topBarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/green"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingTop="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="7.3dp"
            android:layout_marginRight="6dp"
            android:background="@drawable/rounded_corner_light_green">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="27dp"
                android:layout_height="19.3dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/arrow_back" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="23dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="9.7dp"
                android:background="@color/gray" />

            <EditText
                android:id="@+id/etPlaceSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="45dp"
                android:background="@android:color/transparent"
                android:ems="10"
                android:gravity="center_vertical"
                android:hint="Search on place "
                android:inputType="text"
                android:textColor="@color/monsoon"
                android:textColorHint="@color/hint_gray"
                android:textSize="16sp">
            </EditText>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="22dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_location" />

            <TextView
                android:id="@+id/tvCurrentLocation"
                android:layout_width="match_parent"
                android:layout_height="48.5dp"
                android:gravity="center_vertical"
                android:paddingLeft="13.5dp"
                android:text="Current location"
                android:textColor="@color/gray"
                android:textSize="18sp" />

        </LinearLayout>



        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/sign_up_line_thickness"
            android:background="@color/light_gray" />

        <ListView
            android:id="@+id/lvPlaceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"></ListView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/powered_by_google_on_white" />

    </LinearLayout>


</LinearLayout>



