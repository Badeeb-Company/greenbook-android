<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/green</item>
    </style>

    <style name="snackbar">
        <item name="android:background">@color/red</item>
    </style>


    <style name="sign_up_input_text" >
        <item name="android:layout_width" >fill_parent</item>
        <item name="android:layout_height" >match_parent</item>
        <item name="android:textSize" >@dimen/sign_up_input_text_font_size</item>
        <item name="android:textColorHint" >@color/light_green</item>
        <item name="android:layout_marginLeft" >@dimen/sign_up_input_text_left_margin</item>
        <item name="android:background" >@android:color/transparent</item>
    </style>

    <style name="sign_up_input_icon" >
        <item name="android:layout_width">@dimen/sign_up_input_icon_layout_width</item>
        <item name="android:layout_marginRight" >@dimen/sign_up_input_icon_margin</item>
        <item name="android:layout_marginLeft" >@dimen/sign_up_input_icon_margin</item>
        <item name="android:layout_gravity" >center_vertical</item>
    </style>

    <style name="sign_up_horizontal_line" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sign_up_line_width</item>
        <item name="android:layout_marginRight" >@dimen/sign_up_line_margin_right</item>
        <item name="android:layout_marginLeft" >@dimen/sign_up_line_margin_left</item>
        <item name="android:background" >@color/light_gray</item>
    </style>

    <style name="sign_up_vertical_line" >
        <item name="android:layout_width">@dimen/sign_up_line_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background" >@color/light_gray</item>
    </style>

    <style name="sign_up_row_layout" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sign_up_row_height</item>
        <item name="android:layout_marginLeft" >@dimen/sign_up_row_left_margin</item>
        <item name="android:orientation" >horizontal</item>

    </style>

    <!-- Login fragment - Start -->

    <style name="login_linear_layout">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/login_left_margin</item>
        <item name="android:layout_marginRight">@dimen/login_right_margin</item>
        <item name="android:minHeight">@dimen/login_ll_min_height</item>
    </style>

    <style name="login_email_linear_layout" parent="login_linear_layout">
        <item name="android:layout_marginTop">@dimen/login_email_top_margin</item>
    </style>

    <style name="login_bttn_linear_layout">
        <item name="android:background">@drawable/rounded_corner_green</item>
        <item name="android:layout_marginLeft">@dimen/login_bttn_left_margin</item>
        <item name="android:layout_marginRight">@dimen/login_bttn_right_margin</item>
        <item name="android:layout_marginTop">@dimen/login_bttn_top_margin</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="login_skip">
        <item name="android:textColor">@color/light_black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">fonts/OpenSans-Regular.ttf</item>
        <item name="android:layout_marginRight">@dimen/login_right_margin</item>
        <item name="android:layout_marginTop">@dimen/login_skip_top_margin</item>
    </style>

    <style name="login_vertical_line">
        <item name="android:layout_width">@dimen/login_line_thickness</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/separator_color</item>

    </style>

    <style name="login_horizontal_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/login_line_thickness</item>
        <item name="android:layout_marginRight">@dimen/login_right_margin</item>
        <item name="android:layout_marginLeft">@dimen/login_line_right_margin</item>
        <item name="android:background">@color/separator_color</item>
    </style>

    <style name="login_edit_text">
        <item name="android:layout_marginLeft">@dimen/login_et_left_margin</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="login_image">
        <item name="android:layout_width">@dimen/login_image_width</item>
        <item name="android:layout_height">@dimen/login_image_height</item>
        <item name="android:layout_marginRight">@dimen/login_line_right_margin</item>
    </style>

    <style name="login_forget_password">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">fonts/OpenSans-Regular.ttf</item>
    </style>

    <style name="login_bttn">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- Login fragment - End -->

</resources>
